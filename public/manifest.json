{
  "manifest_version": 3,
  "name": "Lorem Ipsum Generator",
  "version": "1.0",
  "description": "Generate Lorem Ipsum text with ease.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "permissions": [
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
